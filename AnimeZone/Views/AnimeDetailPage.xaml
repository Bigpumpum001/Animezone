<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeZone.Views.AnimeDetailPage"
             >

     <Shell.TitleView>
        <Image Source="https://shorturl.at/elpNS"
           Aspect="AspectFill"
           HeightRequest="46"
           WidthRequest="233"
           Margin="0,10,70,0"/>

    </Shell.TitleView>

<ScrollView>

    <Grid
        BackgroundColor="#0D0118">

        <StackLayout>

            <Border Margin="30"
                  BackgroundColor="#311B45"
                  HeightRequest="309"
                  Stroke="#6E557C"
                  StrokeShape="RoundRectangle 30,30,30,30"
                  StrokeThickness="2"
                  WidthRequest="320">

                <Image Source="{Binding SelectedAnime.ImgUrl}"
                       Aspect = "AspectFill"/>

                <Border.Shadow>
                    <Shadow Brush="MediumPurple"
                            Opacity=".7"
                            Radius="50"
                            Offset="0,0"/>
                </Border.Shadow>

            </Border>


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                <Label Grid.Column="0"
                       Text="{Binding SelectedAnime.Name}"
                       TextColor="White"
                       FontSize="19"
                       FontAttributes="Bold"
                       Padding="30,0,100,0" />

                <Frame BackgroundColor="#912CB5"
                       CornerRadius="10"
                       WidthRequest="50"
                       HeightRequest="30"
                       Margin="0,0,30,0"
                       HasShadow="True"
                       HorizontalOptions="End">

                        <Image x:Name="imgx"
                               Source="whiteheart.png"
                               Margin="0"
                               HeightRequest="30"
                               WidthRequest="32"
                               HorizontalOptions="Center">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnFavoriteClicked"/>
                            </Image.GestureRecognizers>
                        </Image>

                    </Frame>
                </Grid>




            <Label Text="Tags"
                   TextColor="White"
                   Padding="30,15,0,10"
                   FontSize="16"
                   FontAttributes="Bold"/>

            <Label Text="{Binding SelectedAnime.Tags}"
                   TextColor="White"
                   Padding="30,0,0,10"
                   FontSize="14"/>

            <Label Text="Synopsis"
                   TextColor="White"
                   Padding="30,15,0,10"
                   FontSize="16"
                   FontAttributes="Bold"/>

            <Label Text="{Binding SelectedAnime.Synopsis}"
                    TextColor="White"
                    HorizontalOptions="Fill"
                    Padding="30,0,10,30"
                    FontSize="14"/>
        </StackLayout>

    </Grid>
</ScrollView>
</ContentPage>
