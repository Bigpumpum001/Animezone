<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeZone.Views.HomePage">

    <Shell.TitleView>
        <Image Source="https://shorturl.at/elpNS"
           Aspect="AspectFill"
           HeightRequest="46"
           WidthRequest="233"
           Margin="0,10,70,0"/>

    </Shell.TitleView>

    <ScrollView Orientation="Vertical"
                BackgroundColor="#0D0118">
        <StackLayout>
            <Grid BackgroundColor="#0D0118"
                  RowDefinitions="Auto,*">

                <Label Text="Recommended for you"
                       TextColor="White"
                       FontSize="20"
                       FontAttributes="Bold"
                       Margin="29,30,0,0"/>

                <CarouselView IndicatorView="Indicator"
                              Grid.Row="1"
                              Grid.Column="0"
                              x:Name="myCarousel"
                              ItemsSource="{Binding Recommendeds}">

                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Grid RowDefinitions="Auto,*">

                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:Reference myCarousel}, Path=BindingContext.ItemTappedCommand}"
                                                          CommandParameter="{Binding .}" />
                                </Grid.GestureRecognizers>

                                <Border Margin="15"
                                        Grid.RowSpan="1"
                                        BackgroundColor="#311B45"
                                        HeightRequest="315"
                                        Stroke="#6E557C"
                                        StrokeShape="RoundRectangle 30,30,30,30"
                                        StrokeThickness="2"
                                        WidthRequest="350">

                                    <Image Aspect="AspectFill"
                                           Source="{Binding ImgUrl}"/>

                                    <Border.Shadow>
                                        <Shadow Brush="MediumPurple"
                                                Opacity=".7"
                                                Radius="100"
                                                Offset="0,0"/>
                                    </Border.Shadow>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
            </Grid>

            <StackLayout Background="#0D0118"
                         Padding="10">
                <IndicatorView x:Name="Indicator"
                               Padding="20"
                               Grid.Column="0"
                               Grid.Row="1"
                               BackgroundColor="#0D0118"
                               HorizontalOptions = "Center"
                               IndicatorColor="White"
                               SelectedIndicatorColor="MediumPurple"
                               VerticalOptions="Center">
                </IndicatorView>
            </StackLayout>

            <Label Text="Popular"
                   TextColor="White"
                   FontSize="20"
                   FontAttributes="Bold"
                   Padding="29,30,0,0"
                   BackgroundColor="#0D0118"/>

            <CollectionView ItemsSource="{Binding Populars}"
                            BackgroundColor="#0D0118"
                            x:Name="myPopular">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="2" />
          
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:Reference myPopular}, Path=BindingContext.PopularTappedCommand}"
                                                          CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>

                            <Grid RowDefinitions="Auto,*">
                                <Border Margin="10"
                                        Grid.RowSpan="1"
                                        BackgroundColor="#311B45"
                                        HeightRequest="170"
                                        Stroke="#6E557C"
                                        StrokeShape="RoundRectangle 20,20,20,20"
                                        StrokeThickness="2"
                                        WidthRequest="150">

                                    <Image Aspect="AspectFill"
                                           Source="{Binding ImgUrl}"/>

                                    <Border.Shadow>
                                        <Shadow Brush="MediumPurple"
                                                Opacity=".7"
                                                Radius="50"
                                                Offset="0,0"/>
                                    </Border.Shadow>

                                </Border>

                                <Label Text="{Binding Name}"
                                       Padding="10,0,10,10"
                                       FontSize="15"
                                       HorizontalOptions="Center"
                                       TextColor="White"
                                       Margin="5,5,0,0"
                                       Grid.Row="1" />
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>

