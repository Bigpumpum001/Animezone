<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeZone.Views.CharacterDetailPage"
             Title="CharacterDetailPage">

   <Shell.TitleView>
        <Image Source="https://shorturl.at/elpNS"
           Aspect="AspectFill"
           HeightRequest="46"
           WidthRequest="233"
           Margin="0,10,70,0"/>

    </Shell.TitleView>

   <ScrollView>
       <Grid BackgroundColor="#0D0118">
           <StackLayout>

               <Border Margin="30"
                       BackgroundColor="#311B45"
                       HeightRequest="309"
                       Stroke="#6E557C"
                       StrokeShape="RoundRectangle 30,30,30,30"
                       StrokeThickness="2"
                       WidthRequest="320">

                   <Image Source="{Binding SelectedCharacter.Img}"
                          Aspect = "AspectFill"/>

                   <Border.Shadow>
                       <Shadow Brush="MediumPurple"
                               Opacity=".7"
                               Radius="50"
                               Offset="0,0"/>
                </Border.Shadow>

            </Border>

               <Grid>
                   <Grid.ColumnDefinitions>
                       <ColumnDefinition Width="*" />
                       <ColumnDefinition Width="Auto" />
                   </Grid.ColumnDefinitions>

                   <Label Grid.Column="0"
                          Text="{Binding SelectedCharacter.Name}"
                          TextColor="White"
                          FontSize="19"
                          FontAttributes="Bold"
                          Padding="30,0,0,15" />
               </Grid>

               <Label Text="{Binding SelectedCharacter.Anime, StringFormat='Anime        {0}'}"
                      TextColor="White"
                      Padding="30,0,0,10"
                      FontSize="14"/>

               <Label Text="{Binding SelectedCharacter.Birth, StringFormat='Birthday    {0}'}"
                      TextColor="White"
                      HorizontalOptions="Fill"
                      Padding="30,0,0,10"
                      FontSize="14"/>

               <Label Text="{Binding SelectedCharacter.Gender, StringFormat='Gender      {0}'}"
                      TextColor="White"
                      HorizontalOptions="Fill"
                      Padding="30,0,0,10"
                      FontSize="14"/>

               <Label Text="{Binding SelectedCharacter.H, StringFormat='Height       {0}'}"
                      TextColor="White"
                      HorizontalOptions="Fill"
                      Padding="30,0,0,10"
                      FontSize="14"/>

               <Label Text="{Binding SelectedCharacter.W, StringFormat='Weight       {0}'}"
                      TextColor="White"
                      HorizontalOptions="Fill"
                      Padding="30,0,0,10"
                      FontSize="14"/>

               <Grid Margin="30,0,30,0">
                   <Grid.RowDefinitions>
                       <RowDefinition Height="Auto"/>
                   </Grid.RowDefinitions>

                   <Grid.ColumnDefinitions>
                       <ColumnDefinition Width="*"/>
                       <ColumnDefinition Width="*"/>
                   </Grid.ColumnDefinitions>

                   <Border Margin="10"
                           Grid.Row="0"
                           Grid.Column="0"
                           BackgroundColor="#311B45"
                           HeightRequest="170"
                           Stroke="#6E557C"
                           StrokeShape="RoundRectangle 20,20,20,20"
                           StrokeThickness="2"
                           WidthRequest="150">

                       <Image Aspect="AspectFill"
                              Source="{Binding SelectedCharacter.Img1}"/>

                        <Border.Shadow>
                            <Shadow Brush="MediumPurple"
                                    Opacity=".7"
                                    Radius="50"
                                    Offset="0,0" />
                        </Border.Shadow>

                   </Border>

                   <Border Margin="10"
                           Grid.Row="0"
                           Grid.Column="1"
                           BackgroundColor="#311B45"
                           HeightRequest="170"
                           Stroke="#6E557C"
                           StrokeShape="RoundRectangle 20,20,20,20"
                           StrokeThickness="2"
                           WidthRequest="150">

                       <Image Aspect="AspectFill"
                              Source="{Binding SelectedCharacter.Img2}"/>

                       <Border.Shadow>
                           <Shadow Brush="MediumPurple" Opacity=".7" Radius="50" Offset="0,0" />
                       </Border.Shadow>

                   </Border>
               </Grid>

               <Label Text="{Binding SelectedCharacter.Biography}"
                      TextColor="White"
                      HorizontalOptions="EndAndExpand"
                      Padding="30,10,30,0"
                      FontSize="14"/>

           </StackLayout>
       </Grid>
   </ScrollView>
</ContentPage>
