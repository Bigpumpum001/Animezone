<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeZone.Views.LogInPage">

    <StackLayout Spacing="15"
                 BackgroundColor="#0D0118">

        <Label Text="Login"
               FontSize="40"
               Margin="0,40,0,0"
               HorizontalOptions="Center"
               TextColor="#E9ABFF"/>

        <Image Source="https://shorturl.at/bfiy2"
               HeightRequest="250"
               WidthRequest="290"
               Aspect="Fill"/>

        <Frame BorderColor="HotPink"
               CornerRadius="10"
               Padding="0"
               Margin="40,15,40,0">

        <Entry Placeholder="Name"
               x:Name="YourName"
               PlaceholderColor="#E9ABFF"
               BackgroundColor="White"/>

        </Frame>

        <Frame BorderColor="HotPink"
               CornerRadius="10"
               Padding="0"
               Margin="40,15,40,0">

            <Entry Placeholder="Password"
                   PlaceholderColor="#E9ABFF"
                   BackgroundColor="White"
                   Text=""
                   x:Name="YourPassword"
                   MaxLength="15"
                   IsPassword="True"/>
        </Frame>

        <Button Text="Login"
                FontSize="20"
                BackgroundColor="#912CB5"
                BorderWidth="1"
                BorderColor="HotPink"
                CornerRadius="20"
                Margin="40,15,40,0"
                Clicked="OnButtonLogin"
                x:Name="ChangePassword"/>
   
        <Button Text="Don't have an account ? Sign up"
                Clicked="OnSignUpClicked"
                HorizontalOptions="Center"
                Margin="0,0,0,0" />

        <Label x:Name="PasswordErrorLabel"            
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               TextColor="White"/>

        <Label x:Name="PasswordSuccessLabel"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               TextColor="White"/>
    </StackLayout>
</ContentPage>
