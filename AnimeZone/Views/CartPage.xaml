<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeZone.Views.CartPage"
             BackgroundColor="#0D0118">

    <Shell.TitleView>
        <Grid>

            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Column="1" >

                <Button CornerRadius="10"
                        HeightRequest="40"
                        WidthRequest="100"
                        Margin="10"
                        Text="Delete all"
                        Clicked="OnDeleteAll"
                        VerticalOptions="Center"
                        HorizontalOptions="End"/>

            </StackLayout>
        </Grid>
    </Shell.TitleView>

    <Grid Padding="10">
        <CollectionView ItemsSource="{Binding CartItems}"
                        BackgroundColor="#0D0118">

            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical"
                                 Span="1" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Product Name Label -->
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               Text="{Binding Name}"
                               FontAttributes="Bold"
                               Padding="10,0,80,10"
                               FontSize="18"
                               TextColor="White"
                               Margin="5,5,0,0" />

                        <!-- Product Image -->
                        <Border Margin="10"
                                Grid.Row="1"
                                Grid.Column="0"
                                BackgroundColor="#311B45"
                                HeightRequest="170"
                                Stroke="#6E557C"
                                StrokeShape="RoundRectangle 20,20,20,20"
                                StrokeThickness="2"
                                WidthRequest="150">
                            
                            <Image Aspect="AspectFill"
                                   Source="{Binding Img}" />

                            <Border.Shadow>
                                <Shadow Brush="MediumPurple"
                                        Opacity=".7"
                                        Radius="50"
                                        Offset="0,0" />
                            </Border.Shadow>

                        </Border>

                        <!-- Delete Button -->
                        <Button Grid.Column="1"
                                Grid.Row="1"
                                HeightRequest="25"
                                WidthRequest="10"
                                Clicked="OnDeleteItem"
                                HorizontalOptions="Start"
                                VerticalOptions="Center"
                                Margin="30,100,0,0">

                            <Button.ImageSource>
                                <UriImageSource Uri="https://shorturl.at/frtPU"/>
                            </Button.ImageSource>

                        </Button>

                        <!-- Item Count Label -->
                        <Border Grid.Row="1"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                HeightRequest="25"
                                WidthRequest="70"
                                Margin="0,100,0,0"
                                Stroke="#6E557C"
                                StrokeShape="RoundRectangle 5">

                            <Label TextColor="Black"
                                   Text="{Binding Item}"
                                   HorizontalOptions="Center" 
                                   FontSize="15"
                                   VerticalOptions = "Center"/>

                            <Border.Shadow>
                                <Shadow Brush="MediumPurple"
                                        Opacity=".7"
                                        Radius="30"
                                        Offset="0,0"/>
                            </Border.Shadow>

                        </Border>

                        <!-- Add Button -->
                        <Button Grid.Column="1"
                                Grid.Row="1"
                                HeightRequest="25"
                                WidthRequest="10"
                                Clicked="OnAddItem"
                                HorizontalOptions="End"
                                Margin="0,100,30,0">

                            <Button.ImageSource>
                                <UriImageSource Uri="https://shorturl.at/dwQU3"/>
                            </Button.ImageSource>

                        </Button>

                        <!-- Price Label -->
                        <Label Grid.Row="1"
                               Grid.Column="1"
                               Grid.ColumnSpan="2"
                               Text="{Binding Price, StringFormat='Price : {0:F2} THB'}"
                               HorizontalOptions="Center"
                               Padding="0,30,0,0"
                               FontSize="15"
                               TextColor="White"
                               Margin="5,5,0,0" />

                        <Label Grid.Row="1"
                               Grid.Column="1"
                               Grid.ColumnSpan="2"
                               Text="{Binding TotalPrice, StringFormat='{}{0:F2} THB'}"
                               HorizontalOptions="Center"
                               Padding="0,70,0,0"
                               FontSize="18"
                               TextColor="White"
                               Margin="5,5,0,0" />

                        <Button Grid.Column="1"
                                Grid.Row="0"
                                HeightRequest="25"
                                WidthRequest="45"
                                TextColor="White"
                                FontSize="10"
                                BorderWidth="1"
                                BorderColor="White"
                                CornerRadius="10"
                                Clicked="OnDelete"
                                HorizontalOptions="End"
                                Margin="0,0,10,0">

                            <Button.ImageSource>
                                <UriImageSource Uri="https://shorturl.at/ruDW1"/>
                            </Button.ImageSource>

                        </Button>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Border Margin="30"
                BackgroundColor="#51006D"
                HeightRequest="60"
                Stroke="#912CB5"
                StrokeShape="RoundRectangle 30,30,30,30"
                StrokeThickness="2"
                WidthRequest="350"
                VerticalOptions="End">

            <Border.Shadow>

                <Shadow Brush="MediumPurple"
                        Opacity=".7"
                        Radius="30"
                        Offset="0,0" />

            </Border.Shadow>

            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="StartAndExpand"
                         VerticalOptions="Center"
                         Margin="0,0">

                <Label Grid.Row="1"
                       Grid.Column="1"
                       Grid.ColumnSpan="1"
                       TextColor="White"
                       Text="{Binding ptotalItem}" 
                       Padding="30,0,0,0"
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       FontSize="18"
                       x:Name="totalLabel"/>

            </StackLayout>
        </Border>

        <Button Grid.Row="1"
                Grid.Column="1"
                HorizontalOptions="End"
                HeightRequest="40"
                WidthRequest="80"
                Grid.ColumnSpan="3"
                BackgroundColor="White"
                BorderWidth="1"
                BorderColor="HotPink"
                CornerRadius="40"
                Margin="0,0,25,40"
                x:Name="Buying"
                Text="Buy"
                FontAttributes="Bold"
                TextColor="#51006D"
                Clicked="OnBuying"
                VerticalOptions="End">
        </Button>

    </Grid>
</ContentPage>
